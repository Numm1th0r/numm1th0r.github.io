<body>

    <div class="controls">
        <h2 style="margin:0;">üìÖ Flow Calendar</h2>
        <div style="display: flex; gap: 10px;">
            <button onclick="addNewEvent()">+ Saj√°t Esem√©ny</button>
            <button class="google-btn" onclick="connectGoogle()">G-Sync</button>
        </div>
    </div>

    <div class="calendar-stream" id="calendarContainer">
        </div>

    <script>
        // --- 1. MINTA ADATOK (Mintha adatb√°zisb√≥l vagy Google API-b√≥l j√∂nne) ---
        const myEvents = [
            { date: '2023-10-27', title: 'Fogorvos', source: 'local', time: '10:00' },
            { date: '2023-10-27', title: 'Bev√°s√°rl√°s', source: 'local', time: '18:00' },
            { date: '2023-10-28', title: 'Google Meet: Projekt', source: 'google', time: '09:00' },
            { date: '2023-10-28', title: 'Eb√©d Any√°val', source: 'local', time: '12:00' },
            { date: '2023-10-28', title: 'Edz√©s', source: 'local', time: '19:00' },
            { date: '2023-11-01', title: 'Mindenszentek', source: 'google', time: 'Eg√©sz nap' },
        ];

        // --- 2. SEG√âDF√úGGV√âNYEK ---

        // D√°tum form√°z√≥
        const daysHu = ['Vas', 'H√©t', 'Kedd', 'Szer', 'Cs√ºt', 'P√©n', 'Szom'];
        const monthsHu = ['Janu√°r', 'Febru√°r', 'M√°rcius', '√Åprilis', 'M√°jus', 'J√∫nius', 'J√∫lius', 'Augusztus', 'Szeptember', 'Okt√≥ber', 'November', 'December'];

        function getEventsForDate(dateString) {
            return myEvents.filter(e => e.date === dateString);
        }

        // Zs√∫folts√°g sz√°m√≠t√°sa (0-3 szint)
        function calculateBusyness(eventCount) {
            if (eventCount === 0) return 0;
            if (eventCount <= 1) return 1; // Z√∂ld
            if (eventCount <= 3) return 2; // S√°rga
            return 3; // Piros
        }

        // --- 3. NAPT√ÅR GENER√ÅL√ÅS ---
        function renderCalendar() {
            const container = document.getElementById('calendarContainer');
            const today = new Date(); // Mai nap
            
            // Gener√°ljunk 3 h√≥napot el≈ëre
            for (let i = 0; i < 3; i++) {
                let currentMonth = new Date(today.getFullYear(), today.getMonth() + i, 1);
                let monthName = monthsHu[currentMonth.getMonth()];
                let year = currentMonth.getFullYear();

                // H√≥nap fejl√©c
                const monthHeader = document.createElement('div');
                monthHeader.className = 'month-header';
                monthHeader.innerText = `${year} ${monthName}`;
                container.appendChild(monthHeader);

                // Napok gener√°l√°sa a h√≥napban
                const daysInMonth = new Date(year, currentMonth.getMonth() + 1, 0).getDate();

                for (let d = 1; d <= daysInMonth; d++) {
                    // Ha a nap m√°r elm√∫lt ebben a h√≥napban (csak az els≈ë ciklusban relev√°ns), ugorjuk √°t?
                    // Most hagyjuk benne a m√∫ltat is a dem√≥ kedv√©√©rt, vagy sz≈±rhetn√©nk.
                    
                    let dateObj = new Date(year, currentMonth.getMonth(), d);
                    let dateString = dateObj.toISOString().split('T')[0]; // YYYY-MM-DD
                    let dayName = daysHu[dateObj.getDay()];

                    // Esem√©nyek lek√©r√©se
                    let dayEvents = getEventsForDate(dateString);
                    let busynessLevel = calculateBusyness(dayEvents.length);

                    // HTML fel√©p√≠t√©se
                    const dayCard = document.createElement('div');
                    dayCard.className = `day-card level-${busynessLevel}`;
                    
                    let eventsHtml = '';
                    if (dayEvents.length > 0) {
                        dayEvents.forEach(ev => {
                            let sourceLabel = ev.source === 'google' ? '<span class="source-google">GOOGLE</span>' : '';
                            let cssClass = ev.source === 'google' ? 'source-google-border' : 'source-local';
                            eventsHtml += `
                                <div class="event-item ${cssClass}">
                                    ${sourceLabel}
                                    <strong>${ev.time}</strong> - ${ev.title}
                                </div>`;
                        });
                    } else {
                        eventsHtml = '<div class="empty-day">Nincs esem√©ny</div>';
                    }

                    dayCard.innerHTML = `
                        <div class="date-box">
                            <span class="day-name">${dayName}</span>
                            <span class="day-number">${d}</span>
                        </div>
                        <div class="events-list">
                            ${eventsHtml}
                        </div>
                    `;

                    container.appendChild(dayCard);
                }
            }
        }

        // --- 4. INTERAKCI√ìK ---

        function addNewEvent() {
            // Itt egy modal ablak ny√≠lna meg, most csak szimul√°ljuk
            let title = prompt("Esem√©ny neve:");
            if(title) {
                // Egyszer≈±s√©g kedv√©√©rt a mai naphoz adjuk
                let todayStr = new Date().toISOString().split('T')[0];
                myEvents.push({
                    date: todayStr,
                    title: title,
                    source: 'local',
                    time: 'Eg√©sz nap'
                });
                // √öjra renderelj√ºk a napt√°rat
                document.getElementById('calendarContainer').innerHTML = '';
                renderCalendar();
                alert("Esem√©ny hozz√°adva a mai naphoz!");
            }
        }

        function connectGoogle() {
            // Ez csak a UI dem√≥ r√©sze. A val√≥di Google API-hoz szerver oldali k√≥d kellene vagy komplexebb JS.
            alert("A Google Napt√°r integr√°ci√≥hoz API kulcs √©s OAuth hiteles√≠t√©s sz√ºks√©ges. (L√°sd a le√≠r√°st)");
            
            // Szimul√°lt import√°l√°s
            myEvents.push({ date: '2023-10-30', title: 'Import√°lt Google Meeting', source: 'google', time: '14:00' });
            document.getElementById('calendarContainer').innerHTML = '';
            renderCalendar();
        }

        // Ind√≠t√°s
        // A dem√≥ kedv√©√©rt √°ll√≠tsuk be a d√°tumot okt√≥berre, hogy l√°tsz√≥djanak a mintaadatok
        // A val√≥s√°gban a "today" v√°ltoz√≥t haszn√°ln√°nk.
        renderCalendar(); 

    </script>
</body>
</html>
