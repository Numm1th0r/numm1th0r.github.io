        /* Zs√∫folts√°g szintek */
        .level-0 { border-left-color: #ddd; } /* √úres */
        .level-1 { border-left-color: var(--busy-low); }
        .level-2 { border-left-color: var(--busy-med); }
        .level-3 { border-left-color: var(--busy-high); }

