            --card-bg: #ffffff;
            --text-primary: #333;
            --text-secondary: #666;
            --accent: #4a90e2;
            --busy-low: #2ecc71;    /* Laza nap */
            --busy-med: #f1c40f;    /* K√∂zepes */
            --busy-high: #e74c3c;   /* Zs√∫folt */
        }

        body {
            font-family: 'Segoe UI', Roboto, Helvetica, sans-serif;
            background-color: var(--bg-color);
            margin: 0;
            padding: 20px;
            color: var(--text-primary);
        }

        /* Vez√©rl≈ëpult */
        .controls {
            position: sticky;
            top: 0;
            background: rgba(244, 246, 248, 0.95);
            padding: 15px 0;
            z-index: 100;
